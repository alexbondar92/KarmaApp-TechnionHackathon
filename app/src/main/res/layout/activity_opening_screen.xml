<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/karmabgpurple"
    android:orientation="vertical"
    tools:context=".OpeningScreenActivity">

    <ImageButton
        android:id="@+id/organization1"
        android:layout_width="96dp"
        android:layout_height="89dp"
        android:onClick="goToOrganization"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/user1"
        android:layout_width="329dp"
        android:layout_height="173dp"
        android:layout_marginStart="8dp"
        android:onClick="goToUser"
        app:layout_constraintBottom_toTopOf="@+id/organization1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406"
        app:srcCompat="@drawable/buttonuser" />
</android.support.constraint.ConstraintLayout>