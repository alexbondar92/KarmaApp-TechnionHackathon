<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/karmabgpurple"
    android:orientation="vertical"
    tools:context=".JobActivity">

    <TextView
        android:id="@+id/currentJob"
        android:layout_width="327dp"
        android:layout_height="46dp"
        android:text="@android:string/yes"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="12dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="133dp"
        android:layout_height="128dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/timenDatenPlace"
        app:layout_constraintTop_toBottomOf="@+id/currentJob"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="211dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="189dp"
        android:layout_height="77dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Organization,his description"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/currentJob" />

    <TextView
        android:id="@+id/timenDatenPlace"
        android:layout_width="327dp"
        android:layout_height="227dp"
        android:layout_marginBottom="8dp"
        android:text="Time and Date and Place"
        app:layout_constraintBottom_toTopOf="@+id/attend"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/attend"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:text="Attend"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/gotoOrg"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Organization"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/timenDatenPlace"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</android.support.constraint.ConstraintLayout>